<script>
// 等待页面DOM完全加载完成（避免DOM未就绪时调用弹窗导致异常）
document.addEventListener('DOMContentLoaded', function() {
  // 核心调用：cAlert.s(标题, 文本, 配置对象) —— 这是弹窗库的核心触发方法
  // 方法说明：cAlert是全局暴露的库名（缩写），.s是success方法的缩写（代表成功类型弹窗）
  cAlert.s(
    '欢迎访问',  // 第1个参数：弹窗标题（对应JS内部的t参数，显示在弹窗顶部，字体较大）
    '欢迎来到我的网站，感谢您对我的信任与支持',  // 第2个参数：弹窗正文（对应JS内部的tx参数，显示在标题下方，字体较小）
    { tm: 5000 }  // 第3个参数：配置对象（可选），tm是timer的缩写，值为5000代表5000毫秒（5秒）后自动关闭弹窗
  ).then(function() {
    // then回调：弹窗完全关闭后触发（需等待2秒关闭动画结束），可用于执行关闭后的后续操作
    console.log('弹窗已关闭（2秒关闭动画已完成）');
